<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>

<VBox id="home" prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomeScreenController">
   <children>
      <Label text="Welcome to BattleTanks">
         <VBox.margin>
            <Insets left="60.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font size="36.0" />
         </font>
         <textFill>
            <LinearGradient endX="0.6190476190476191" endY="0.9952380952380953" startY="0.3952380952380952">
               <stops>
                  <Stop color="#9e269e" />
                  <Stop color="RED" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#startGame" text="New Game">
         <padding>
            <Insets bottom="35.0" left="80.0" right="80.0" top="35.0" />
         </padding>
         <VBox.margin>
            <Insets left="110.0" top="50.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#instructions" text="Instructions">
         <VBox.margin>
            <Insets left="110.0" top="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="7.0" left="110.0" right="110.0" top="7.0" />
         </padding>
      </Button>
   </children>
</VBox>
